{
    "name": "Blockcore Extension",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Browser extension for Blockcore.",
    "author": "Blockcore",
    "homepage_url": "https://www.blockcore.net/",
    "icons": {
        "16": "icons/blockcore-16x16.png",
        "32": "icons/blockcore-32x32.png",
        "48": "icons/blockcore-48x48.png",
        "128": "icons/blockcore-128x128.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ]
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "/icons/blockcore-16x16.png",
            "32": "/icons/blockcore-32x32.png",
            "48": "/icons/blockcore-48x48.png",
            "128": "/icons/blockcore-128x128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/content.js"
            ]
        }
    ]
}