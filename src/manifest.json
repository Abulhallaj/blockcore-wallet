{
    "name": "Blockcore Extension",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "description": "Browser extension for Blockcore.",
    "author": "Blockcore",
    "icons": {
        "16": "icons/blockcore-16x16.png",
        "32": "icons/blockcore-32x32.png",
        "48": "icons/blockcore-48x48.png",
        "128": "icons/blockcore-128x128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "unlimitedStorage",
        "webRequest",
        "webNavigation",
        "alarms",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html"
    }
}