{
    "name": "CoinVault",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Browser extension for Stratis and Cirrus.",
    "author": "https://www.coinvault.io",
    "icons": {
        "16": "icons/coinvault/icon-16x16.png",
        "32": "icons/coinvault/icon-32x32.png",
        "48": "icons/coinvault/icon-48x48.png",
        "128": "icons/coinvault/icon-128x128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "webNavigation",
        "alarms",
        "clipboardWrite",
        "notifications"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+Shift+X",
                "mac": "Alt+Shift+X",
                "chromeos": "Alt+Shift+X",
                "linux": "Alt+Shift+X"
            }
        }
    },
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "CoinVault"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content.js"
            ],
            "matches": [
                "file://*/*",
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://www.blockcore.net/*",
            "https://www.coinvault.io/*",
            "http://localhost/*"
        ]
    },
    "web_accessible_resources": [
        "provider.js"
    ]
}